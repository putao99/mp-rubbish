/* pages/address-list/list.wxss */
.container {
  position: relative;
  height: 100vh;
  background-color: #f6f6f6;
}
.bg {
  background-color: #fff;
}
.container .address-list .address-item {
  box-sizing: border-box;
  height: 128rpx;
  padding: 22rpx 40rpx 20rpx;
  cursor: pointer;
}
.container .address-list .address-item .address {
  font-size: 32rpx;
  color: #222;
  line-height: 44rpx;
}
.container .address-list .address-item .contact {
  margin-top: 8rpx;
}
.container .address-list .address-item .contact text {
  font-size: 24rpx;
  color: #999;
  line-height: 34rpx;
}
.container .address-list .address-item .contact text:first-child {
  margin-right: 40rpx;
}

.container .address-add {
  display: flex;
  align-items: center;
  justify-content: center;
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 98rpx;
  cursor: pointer;
}

.container .address-add image {
  width: 38rpx;
  height: 38rpx;
  margin-right: 20rpx;
}