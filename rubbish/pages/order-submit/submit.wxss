/* pages/order-submit/submit.wxss */

.container {
  position: relative;
  height: 100vh;
  background-color: #f6f6f6;
}

.container .bg {
  background-color: #fff;
}

.container .contact-container .address-warpper {
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 136rpx;
  margin-left: 42rpx;
  margin-right: 38rpx;
  padding: 26rpx 0 24rpx 0;
  border-bottom: 2rpx solid #eee;
  cursor: pointer;
}

.container .contact-container .address-warpper .address .site {
  font-size: 32rpx;
  font-weight: 500;
  color: #222;
  line-height: 44rpx;
}

.container .contact-container .address-warpper .address .contact {
  margin-top: 8rpx;
}

.container .contact-container .address-warpper .address .contact text {
  font-size: 24rpx;
  color: #999;
  line-height: 34rpx;
}

.container .contact-container .address-warpper .address .contact text:first-child {
  margin-right: 40rpx;
}

.container .contact-container .address-warpper .more image {
  width: 14rpx;
  height: 24rpx;
}

.container .contact-container .time-warpper {
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 136rpx;
  margin-left: 42rpx;
  margin-right: 38rpx;
  padding: 26rpx 0 24rpx 0;
  cursor: pointer;
}

.container .contact-container .time-warpper view {
  font-size: 32rpx;
  font-weight: 500;
  color: #222;
  line-height: 44rpx;
}

.container .contact-container .time-warpper view text {
  margin-right: 18rpx;
  font-weight: 400;
  color: #3ec0c0;
}

.container .contact-container .time-warpper image {
  width: 14rpx;
  height: 24rpx;
}

.container .inf-warpper {
  margin-top: 20rpx;
}
.container .inf-warpper .info {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-left: 40rpx;
  margin-right: 40rpx;
  padding: 32rpx 0;
  border-bottom: 2rpx solid #eee;
}
.container .inf-warpper .title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  line-height: 44rpx;
}
.container .inf-warpper .value {
  font-size: 28rpx;
  color: #999;
  line-height: 40rpx;
}
.container .inf-warpper .note {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 38rpx 32rpx 40rpx;
}
.container .inf-warpper .note  image {
  width: 14rpx;
  height: 24rpx;
  margin-left: 18rpx;
}
.container .agreement-warpper {
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  height: 108rpx;
  margin-top: 20rpx;
  padding: 36rpx 40rpx;
}
.container .agreement-warpper .checkbox {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #999;
  line-height: 34rpx;
}
.container .agreement-warpper .checkbox checkbox {
  width: 36rpx;
  height: 36rpx;
  margin-right: 20rpx;
}

.container .agreement-warpper .checkbox checkbox .wx-checkbox-input {
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
}
.container .agreement-warpper .checkbox checkbox .wx-checkbox-input-checked{
  border-color: #3ec0c0;
}
.container .agreement-warpper .checkbox checkbox .wx-checkbox-input-checked::before{
  color: #3ec0c0;
}
.container .agreement-warpper .checkbox text {
  color: #3ec0c0;
}

.container .submit {
  display: flex;
  align-items: center;
  justify-content: center;
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 128rpx;
}

.container .submit button {
  width: 690rpx;
  height: 88rpx;
  background-color: #3ec0c0;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 500;
  color: #fff;
  cursor: pointer;
}