/* pages/rubbish-info/info.wxss */

.container {
  height: 100%;
  background-color: #f6f6f6;
}

.bg {
  background-color: #fff;
}

.container .title {
  font-size: 32rpx;
  font-weight: 500;
  color: #222;
  line-height: 44rpx;
}

.container .kind-warpper {
  box-sizing: border-box;
  padding: 42rpx 40rpx 30rpx;
}

.container .kind:not(:first-child) {
  margin-top: 40rpx;
}

.container .kind-warpper .kind .kind-container {
  display: flex;
  flex-flow: row wrap;
  align-items: flex-start;
  margin-top: 20rpx;
}

.container .kind-warpper .kind .kind-container .radio-warpper {
  box-sizing: border-box;
  display: flex;
  flex: 0 0 30%;
  align-items: center;
  justify-content: center;
  width: 210rpx;
  height: 70rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  border: 1rpx solid #999;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: #222;
  line-height: 40rpx;
  cursor: pointer;
}

.container .kind-warpper .kind .kind-container .active {
  border: 1rpx solid #3ec0c0;
  color: #3ec0c0;
}

.container .kind-warpper .kind .kind-container .radio-warpper:nth-child(3),
.radio-warpper:nth-child(6) {
  margin-right: 0;
}

.container .kind-warpper .tip {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 670rpx;
  height: 60rpx;
  margin-bottom: 30rpx;
  background-color: #f6f6f6;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #999;
  line-height: 34rpx;
}

.container .img-warpper {
  box-sizing: border-box;
  height: 344rpx;
  margin-top: 20rpx;
  padding: 30rpx 40rpx 40rpx;
}

.container .img-warpper .upload {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 210rpx;
  height: 210rpx;
  margin-top: 20rpx;
  border: 2rpx solid #ddd;
  border-radius: 12rpx;
  cursor: pointer;
}

.container .img-warpper .upload:before, .upload:after {
  content: "";
  position: absolute;
  background: #ddd;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.container .img-warpper .upload:before {
  width: 86rpx;
  height: 2rpx;
}

.container .img-warpper .upload:after {
  width: 2rpx;
  height: 86rpx;
}

.container .note-warpper {
  height: 180rpx;
  margin-top: 20rpx;
  padding: 28rpx 40rpx;
}

.container .submit {
  display: flex;
  justify-content: center;
  margin-top: 40rpx;
  margin-bottom: 58rpx;
}
.container .submit button {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 670rpx;
  height: 90rpx;
  border-radius: 12rpx;
  background-color: #3ec0c0;
  font-size: 32rpx;
  font-weight: 500;
  color: #fff;
  line-height: 44rpx;
  cursor: pointer;
}